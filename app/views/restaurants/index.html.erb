<div class="banner">
  <div class="banner-content">
    <h1>Yulp</h1>
    <p>What's your mood for food ?</p>
    <form class="navbar-form navbar-left" role="search">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-danger">Submit</button>
    </form>
  </div>
</div>

<h1>List of all YELP restaurants</h1>

<div class="container">
  <div class="row">
    <% @restaurants.each do |restaurant| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card">
        <h2 id="card-title"><%= restaurant.name %></h2>
        <p id="card-address"><%= restaurant.address + " " + restaurant.phone_number %></p>
        <p id="card-category"><%= restaurant.category %></p>
        <%= link_to "view restaurant", restaurant_path(restaurant), class: "btn btn-success" %>
    </div>
    </div>
    <% end %>
  </div>
</div>
