<h2>Create a new restaurant</h2>

<div class="container text-center" id="form">
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: Restaurant::CATEGORY %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
</div>
