<button><%= link_to "back to restaurants", restaurants_path %></button>

<h2><%= @restaurant.name %></h2>
<p>Address : <%=@restaurant.address %></p>
<p>Contact : <%= @restaurant.phone_number %></p>
<p>Category : <%= @restaurant.category %></p>

<%= link_to "edit restaurant", edit_restaurant_path(@restaurant) %><br>
<%= link_to "add a review", new_restaurant_review_path(@restaurant) %>

<h3>Les reviews des yelpers</h3>
<% @restaurant.reviews.each do |review| %>
  <p><%= review.content %></p>
  <p>Note: <%= review.rating %></p>
  <% end %>


